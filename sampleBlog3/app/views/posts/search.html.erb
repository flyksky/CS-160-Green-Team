<h1> Search Posts </h1>

 <%= link_to 'Home', posts_path %>

 <%= form_tag post_search_path, :method => 'get' do %>
 <p>
    
<%= text_field_tag :search, params[:search] %>
    
<%= submit_tag "Search", :name => nil %>

</p>
   <% end %>

 <table>

   <thead>

     <tr>

       <th>Title</th>

       <th>Body</th>

       <th colspan="3"></th>

     </tr>

   </thead>


   <tbody>
     
    
     
     <% @posts.each do |post| %>

     <tr>

       <td>
         <%= post.title %>
       </td>

       <td>
         <%= post.body %>
       </td>

       <td>
         <%= link_to 'Show', post %>
       </td>

     </tr>

     <% end %>

   </tbody>

 </table>


 